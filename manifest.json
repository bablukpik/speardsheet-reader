

{
   "name": "Sample Extension",
   "version": "1.0",
   "description": "Hello World",
   "permissions": ["https://docs.google.com/spreadsheets/","https://script.google.com/",
      "https://sheets.googleapis.com/*","identity", "identity.email"
      ,"tabs", 
      "storage",
      "management", "notifications", "webRequestBlocking", "unlimitedStorage"
   ],
   "author": "Jess",
   "icons":{  
      "128":"img/icon.png"
   },
   "background": {
      "scripts": ["shared.function.js","background.js"],
      "persistent": true
    },
   "content_scripts": [{
     "matches": ["*://*.mail.google.com/*"],
     "js"     : ["jq.js","shared.function.js", "content.script.js"],
     "run_at": "document_end",
      "all_frames": false
   }],
   "browser_action":{  
      "default_icon":"img/icon.png",
      "default_title":"Execution API Example",
      "default_popup":"popup.html"
   },
  "oauth2": {
     "client_id": "1018444700498-8v2eo61dh0s8nbf6e77sm6ha9dc76s8t.apps.googleusercontent.com",
     "scopes": [
         "https://www.googleapis.com/auth/spreadsheets.readonly",
         "https://www.googleapis.com/auth/userinfo.email",
         "profile"
    ]},
   "content_security_policy": "script-src 'self' 'unsafe-eval' https://apis.google.com/; object-src 'self'",
   "manifest_version": 2,
   "web_accessible_resources": [ "*.*" ]
 }